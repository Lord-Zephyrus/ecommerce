    
    <section>
        <div class="container">
            <div class="row">

                {{#each products}}
                <div class="col-md-3 mt-5">
                    <div class="card" style="width: 16rem;">
                        <img class="card-img-top mt-4" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>